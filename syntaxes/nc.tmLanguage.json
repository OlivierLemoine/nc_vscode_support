{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "nc",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#expression"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.nc",
                    "match": "(if|else|endif|return|end|call)"
                },
                {
                    "match": "(def) (\\w+) ([\\w\\W]*)$",
                    "captures": {
                        "1": { "name": "entity.name.tag" },
                        "2": { "name": "entity.name.function" },
                        "3": { "name": "variable.parameter" }
                    }
                },
                {
                    "name": "comment.line.double-slash",
                    "match": "(// [\\w\\W]*)"
                },
                {
                    "name": "entity.name.type",
                    "match": "(>|\\$)"
                },
                {
                    "name": "constant.numeric",
                    "match": "( [0-9]+(?![A-z]).?[0-9]*)(?![A-z])"
                },
                {
                    "name": "entity.name.function",
                    "match": "^[ ]*(?!(if|else|endif|return|end|call|def))(\\w*)"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.nc",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.nc",
                    "match": "\\\\."
                }
            ]
        }
    },
    "scopeName": "source.nc"
}
